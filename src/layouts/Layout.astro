---
export interface Props {
    title: string;
    description?: string;
    image?: string;
}

const { title, description = 'a lazy stella sora database', image = 'https://stelladb.pages.dev/nazuna.png' } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=0.5" />
        <link rel="preload" href="/font.woff2" as="font" type="font/woff2" crossorigin />
        <link rel="preconnect" href="https://chino.is-a.dev" crossorigin />
        <meta name="google-site-verification" content="QnPzHT-3k8oi0acqMvSozJjSGyAgimpbAop5WpEQ_Oc" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <meta name="theme-color" content="#66ff99" />
        <meta property="og:site_name" content="stelladb.pages.dev" />
        <link rel="canonical" href={Astro.url.href} />
        <meta property="og:image" content={image} />
        <link rel="sitemap" href="/sitemap-index.xml" />
    </head>
    <body>
        <nav>
            <a href="/" class="logo">stelladb</a>
            <div class="navlinks">
                <a href="/trekker">Trekker</a>
                <a href="/disc">Disc</a>
                <details>
                    <summary>Boss</summary>
                    <div>
                        <a href="/raid">Raid / A Finale Echoing</a>
                        <a href="/blitz">Boss Blitz</a>
                        <a href="/ground">Proving Ground</a>
                    </div>
                </details>
                <a href="/banner">Banner</a>
                <a href="/emblem">Emblem</a>
            </div>
        </nav>

        <main>
            <slot />
        </main>
    </body>
</html>

<script>
    // @ts-nocheck
    const tooltips = document.querySelectorAll('.tooltip');

    for (let i = 0; i < tooltips.length; i++) {
        tooltips[i].addEventListener('mousemove', (e) => {
            const tooltip = e.target.querySelector('.tooltip-text');
            tooltip.style.left = e.pageX + tooltip.clientWidth + 16 < document.body.clientWidth ? e.pageX + 16 + 'px' : document.body.clientWidth - tooltip.clientWidth + 'px';
            tooltip.style.top = e.pageY + tooltip.clientHeight + 16 < document.body.clientHeight ? e.pageY + 16 + 'px' : document.body.clientHeight - tooltip.clientHeight + 'px';
        });
    }
</script>

<style is:global>
    :root {
        --bg: #111;
        --bg1a: #1116;
        --bg2: #222;
        --muted: #bbb;
        --text: #eee;
        --accent: #6f9;
        --word: #69e;
        --nav-height: 64px;
    }

    html,
    body {
        margin: 0;
        min-height: 100%;
        scrollbar-gutter: stable;
    }

    body {
        background: var(--bg);
        color: var(--text);
        font-family: Inter, 'Segoe UI', Arial, system-ui, sans-serif;
    }

    a {
        color: var(--muted);
        text-decoration: none;
    }

    a:hover {
        color: var(--text);
    }

    button {
        font-family: inherit;
    }

    .tooltip {
        font-weight: bold;
    }

    .tooltip.word {
        color: var(--word);
    }

    .tooltip [style*='background'] {
        display: inline-block;
        vertical-align: middle;
        width: 1.25rem;
        height: 1.25rem;
    }

    .tooltip-text {
        display: none;
        position: absolute;
        border-radius: 6px;
        background: var(--bg2);
        padding: 1rem;
        width: 400px;
        color: var(--text);
        font-weight: normal;
    }

    .tooltip:hover .tooltip-text {
        display: block;
    }

    @font-face {
        src: url('/font.woff2') format('woff2');
        font-family: Inter;
        font-display: swap;
    }
</style>

<style>
    nav {
        display: flex;
        position: sticky;
        top: 0;
        align-items: center;
        z-index: 727;
        backdrop-filter: blur(5px);
        margin: 0 auto;
        background: var(--bg1a);
        padding: 0 1rem;
        max-width: 1000px;
        height: var(--nav-height);
    }

    .logo {
        margin-right: 1rem;
        padding: 0.5rem 0.5rem;
        color: var(--accent);
        font-weight: 700;
        font-size: 1.5rem;
        text-decoration: none;
    }

    .navlinks {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-left: auto;
    }

    .navlinks a {
        padding: 0.5rem 0.5rem;
    }

    .navlinks details {
        position: relative;
    }

    .navlinks summary {
        cursor: pointer;
        padding: 0.5rem;
        color: var(--muted);
        list-style: none;
    }

    .navlinks summary:hover {
        color: var(--text);
    }

    .navlinks details[open] summary {
        color: var(--text);
    }

    .navlinks details[open] div {
        display: flex;
        position: absolute;
        top: calc(var(--nav-height) - 1rem);
        right: 0;
        flex-direction: column;
        border-radius: 6px;
        background: var(--bg2);
        padding: 0.25rem 0;
        width: max-content;
    }

    .navlinks details[open] a {
        padding: 0.5rem 0.75rem;
    }

    main {
        margin: auto;
        padding: 0 1rem;
        max-width: 1000px;
    }
</style>
