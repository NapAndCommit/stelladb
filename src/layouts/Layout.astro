<script>
    // @ts-nocheck
    const tooltips = document.querySelectorAll('.tooltip');

    for (let i = 0; i < tooltips.length; i++) {
        tooltips[i].addEventListener('mousemove', (e) => {
            const tooltip = e.target.querySelector('.tooltip-text');
            tooltip.style.left = e.pageX + tooltip.clientWidth + 16 < document.body.clientWidth ? e.pageX + 16 + 'px' : document.body.clientWidth - tooltip.clientWidth + 'px';
            tooltip.style.top = e.pageY + tooltip.clientHeight + 16 < document.body.clientHeight ? e.pageY + 16 + 'px' : document.body.clientHeight - tooltip.clientHeight + 'px';
        });
    }

    const navDetails = document.querySelectorAll('.navlinks details');

    navDetails.forEach((d) => {
        d.addEventListener('toggle', () => {
            if (!d.open) return;
            navDetails.forEach((other) => {
                if (other !== d && other.open) other.open = false;
            });
        });
    });

    document.addEventListener('click', (e) => {
        if (Array.from(navDetails).some((d) => d.contains(e.target))) return;

        navDetails.forEach((d) => {
            if (d.open) d.open = false;
        });
    });
</script>

<style is:global>
    :root {
        --bg: #111;
        --bg1a: #1116;
        --bg2: #222;
        --bg2a: #2226;
        --muted: #bbb;
        --text: #eee;
        --accent: #6f9;
        --word: #69e;
        --nav-height: 64px;
    }

    html,
    body {
        margin: 0;
        min-height: 100%;
        scrollbar-gutter: stable;
    }

    body {
        background: var(--bg);
        color: var(--text);
        font-family: Inter, 'Segoe UI', Arial, system-ui, sans-serif;
        line-height: 1.3;
    }

    a {
        color: var(--muted);
        text-decoration: none;
    }

    a:hover {
        color: var(--text);
    }

    button {
        font-family: inherit;
    }

    .tooltip {
        font-weight: 700;
    }

    .tooltip.word {
        color: var(--word);
    }

    .tooltip [style*='background'] {
        display: inline-block;
        vertical-align: middle;
        width: 1.25rem;
        height: 1.25rem;
    }

    .tooltip-text {
        display: none;
        position: absolute;
        border-radius: 6px;
        background: var(--bg2);
        padding: 1rem;
        width: 400px;
        color: var(--text);
        font-weight: 400;
    }

    .tooltip:hover .tooltip-text {
        display: block;
    }

    @font-face {
        src: url('/font.woff2') format('woff2');
        font-family: Inter;
        font-display: swap;
    }
</style>

<style>
    nav {
        display: flex;
        position: sticky;
        top: 0;
        align-items: center;
        z-index: 727;
        backdrop-filter: blur(5px);
        margin: 0 auto;
        background: var(--bg1a);
        padding: 0 1rem;
        max-width: 1000px;
        height: var(--nav-height);
        white-space: nowrap;
    }

    .logo {
        margin-right: 1rem;
        padding: 0.5rem 0.5rem;
        color: var(--accent);
        font-weight: 700;
        font-size: 1.5rem;
        text-decoration: none;
    }

    .navlinks {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-left: auto;
    }

    .navlinks a {
        padding: 0.5rem 0.5rem;
    }

    .navlinks details {
        position: relative;
    }

    .navlinks summary {
        cursor: pointer;
        padding: 0.5rem;
        color: var(--muted);
        list-style: none;
    }

    .navlinks summary:hover,
    .navlinks summary:focus-visible {
        color: var(--text);
    }

    .navlinks details[open] summary {
        color: var(--text);
    }

    .navlinks details[open] div {
        display: flex;
        position: absolute;
        top: calc(var(--nav-height) - 1rem);
        right: 0;
        flex-direction: column;
        border-radius: 6px;
        background: var(--bg2);
        padding: 0.25rem 0;
        width: max-content;
        box-shadow: 0 12px 28px #0008;
    }

    .navlinks details[open] a {
        padding: 0.5rem 0.75rem;
    }

    main {
        margin: auto;
        padding: 0 1rem;
        max-width: 1000px;
        min-height: calc(100dvh - 2 * var(--nav-height));
    }

    footer {
        display: flex;
        justify-content: center;
        align-items: center;
        color: var(--muted);
        height: var(--nav-height);
    }
</style>
